{
  "private": true,
  "sideEffects": false,
  "main": "build/index.js",
  "scripts": {
    "lint-fix": "npx eslint --fix ./*.js ./app/**/*.{js,jsx,ts,tsx}",
    "lint": "npx eslint ./*.js ./app/**/*.{js,jsx,ts,tsx}",
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/index.css -o ./app/styles/index.css",
    "dev": "remix build && run-p dev:*",
    "dev:css": "tailwindcss -w -i ./styles/index.css -o ./app/styles/index.css",
    "dev:remix": "remix watch",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch --env .env",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js",
    "deploy": "npm run build && wrangler publish",
    "emulate": "npx firebase emulators:start --project development --only auth functions firestore",
    "deploy-secret": "bash ./scripts/deploy-secret.sh"
  },
  "workspaces": [
    "functions"
  ],
  "dependencies": {
    "@remix-run/cloudflare": "^1.6.1",
    "@remix-run/cloudflare-workers": "^1.6.1",
    "@remix-run/react": "^1.6.1",
    "@types/firebase": "^3.2.1",
    "cross-env": "^7.0.3",
    "firebase": "^9.9.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "zustand": "^4.0.0-rc.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.10.0",
    "@remix-run/dev": "^1.6.1",
    "@remix-run/eslint-config": "^1.6.1",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.2",
    "eslint": "^8.19.0",
    "eslint-config-google": "^0.14.0",
    "miniflare": "^2.4.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.1.5",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14"
  }
}
