{
  "private": true,
  "sideEffects": false,
  "main": "build/index.js",
  "scripts": {
    "lint-fix": "npx eslint --fix ./*.js ./app/**/*.{js,jsx,ts,tsx}",
    "lint": "npx eslint ./*.js ./app/**/*.{js,jsx,ts,tsx}",
    "build": "npm run build:css && remix build",
    "build:css": "run-p build:css:*",
    "build:css:index": "tailwindcss -m -i ./styles/index.css -o ./app/styles/index.css",
    "build:css:calendar": "tailwindcss -m -i ./styles/calendar.css -o ./app/styles/calendar.css",
    "build:css:wywiwya": "tailwindcss -m -i ./styles/wywiwya.css -o ./app/styles/wywiwya.css",
    "build:css:preview": "tailwindcss -m -i ./styles/preview.css -o ./public/css/preview.css",
    "dev": "remix build && run-p dev:*",
    "dev:css": "run-p dev:css:*",
    "dev:css:index": "tailwindcss -w -i ./styles/index.css -o ./app/styles/index.css",
    "dev:css:calendar": "tailwindcss -w -i ./styles/calendar.css -o ./app/styles/calendar.css",
    "dev:css:wywiwya": "tailwindcss -w -i ./styles/wywiwya.css -o ./app/styles/wywiwya.css",
    "dev:css:preview": "tailwindcss -w -i ./styles/preview.css -o ./public/css/preview.css",
    "dev:remix": "remix watch",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch --env .env",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js",
    "deploy": "npm run build && wrangler publish",
    "emulate": "firebase emulators:start",
    "deploy-secret": "bash ./misc/deploy-secret.bash",
    "nirugiri": "bash ./misc/start-workspace.bash"
  },
  "workspaces": [
    "functions"
  ],
  "dependencies": {
    "@codemirror/lang-markdown": "^6.0.0",
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.9.3",
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@mui/icons-material": "^5.8.4",
    "@mui/material": "^5.9.0",
    "@nivo/bar": "^0.79.1",
    "@nivo/core": "^0.79.0",
    "@remix-run/cloudflare": "^1.6.1",
    "@remix-run/cloudflare-workers": "^1.6.1",
    "@remix-run/react": "^1.6.1",
    "@types/axios": "^0.14.0",
    "@types/codemirror": "^5.60.5",
    "@types/common-tags": "^1.8.1",
    "@types/dompurify": "^2.3.3",
    "@types/firebase": "^3.2.1",
    "@types/js-yaml": "^4.0.5",
    "@types/luxon": "^2.3.2",
    "@types/markdown-it": "^12.2.3",
    "@types/react-calendar": "^3.5.1",
    "axios": "^0.27.2",
    "codemirror": "^5.65.6",
    "common-tags": "^1.8.2",
    "cross-env": "^7.0.3",
    "dompurify": "^2.3.9",
    "firebase": "^9.9.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "luxon": "^3.0.1",
    "markdown-it": "^13.0.1",
    "markdown-it-emoji": "^2.0.2",
    "markdown-it-task-checkbox": "^1.0.6",
    "react": "^17.0.2",
    "react-calendar": "^3.7.0",
    "react-dom": "^17.0.2",
    "react-loading": "^2.0.3",
    "remix-utils": "^3.3.0",
    "zustand": "^4.0.0-rc.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.10.0",
    "@remix-run/dev": "^1.6.1",
    "@remix-run/eslint-config": "^1.6.1",
    "@types/codemirror": "^5.60.5",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.2",
    "eslint": "^8.19.0",
    "eslint-config-google": "^0.14.0",
    "miniflare": "^2.4.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.1.5",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=16"
  }
}
